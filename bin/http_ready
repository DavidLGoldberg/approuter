#! /usr/bin/env bash
TEST_COMMAND="curl -X GET -o /dev/null -s -w %{response_code} ${1}"

for c in {1..20}; do
  RESULT=`${TEST_COMMAND}`
  if [ -n "${DEBUG}" ]; then
    echo ${RESULT}
  fi
  if [ ${RESULT} == "200" ]; then
    exit 0;
  fi
  sleep .2;
done

if [ -n "${DEBUG}" ]; then
  echo ${RESULT}
fi
exit 1;
