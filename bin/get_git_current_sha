#! /usr/bin/env bash
REPO_DIR=${1?You must provide a repository direcory}
if [ ! -d "$REPO_DIR" ]; then
  echo "could not find repository directory ${REPO_DIR}"
  exit 101
fi
if [ ! -d "${REPO_DIR}/.git" ]; then
  echo "This doesn't appear to be the root of a git repository"
  exit 103
fi

pushd $REPO_DIR > /dev/null
REPO_SHA=`git log -1 --oneline | awk '{ print $1 }'`

if [ -z "${REPO_SHA}" ]; then
  echo "could find no origin url, is ${REPO_DIR} really a git repository"
  exit 102
fi

popd > /dev/null
echo ${REPO_SHA}
