#! /usr/bin/env bash
# vim: set ft=shell

MY_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [ -z "${ENVIRONMENT_SOURCED}" ]; then
  source ${MY_DIR}/environment
fi
ACTION=$1
if [ "${ACTION}x" == "x" ]; then
  # we do expect to own the machine, so this is
  # reasonable
  cat ${PERP_BASE}/.control/perpd.pid | xargs kill -TERM 
else
  perpctl D ${ACTION}
fi
